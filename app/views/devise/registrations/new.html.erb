  <!--SIGNUP -->

  <div class="container-fluid">
    <div class="background-lines opacity-level-2"></div>
    <!--Logo-->
    <div class="row mt-4 mb-3">
      <div class="col-xs mx-auto d-block">
        <%= image_tag("logo.png", :alt => "logo") %>
      </div>
    </div>

    <div class="row d-block">
      <div class="col col-sm-8 col-md-6 col-lg-6 offset-sm-2 offset-md-3 offset-lg-3">

        <!--Form-->
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name,
          required: true,
          autofocus: true,
          input_html: { placeholder: "First name", style: "border: 1px solid grey;" }, :class => "form-control"%>
          <%= f.input :last_name,
          required: true,
          autofocus: true,
          input_html: { placeholder: "Last name", style: "border: 1px solid grey;" }, :class => "form-control"%>
          <%= f.input :email,
          required: true,
          autofocus: true,
          input_html: { placeholder: "Email", style: "border: 1px solid grey;" }, :class => "form-control"%>
          <%= f.input :password,
          required: true,
          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
          input_html: { placeholder: "Password", style: "border: 1px solid grey;" }, :class => "form-control" %>
          <%= f.input :password_confirmation,
          required: true,
          input_html: { placeholder: "Confirm password", style: "border: 1px solid grey;" }, :class => "form-control" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", :class => "btn btn-lg btn-block button-sign-up" %>
        </div>

          <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>

    <div class="footer fixed-bottom">
      <div class="footer-top d-flex justify-content-center">
      </div>
    </div>
  </div>

