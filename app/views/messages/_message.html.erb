<div class="message <%= user_is_messages_author ? "right" : "" %>">

  <% if message.user.photo? %>
    <%= cl_image_tag message.user.photo, class: "avatar" %>
  <% else %>
    <%= image_tag image_url("default-avatar.png"), class: "avatar" %>
  <% end %>

  <div class="message-content"><%= message.content %></div>
</div>



