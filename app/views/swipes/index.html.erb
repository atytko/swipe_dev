
<div class="container">
  <div class="matches-title mt-5 mb-3">
    <h1>Your Matches</h1>
  </div>
  <% @swipes.each do |swipe| %>
    <div class="matches-card">
      <div class="col-xs-5">
        <div class="matches-card-img">
          <%= image_tag swipe.offer.company_photo %>
        </div>
      </div>
      <div class="col-7 d-block align-self-center">
        <div class="matches-card-company col-12 text-left">
          <%= swipe.offer.company_name%>
        </div>
        <div class="matches-card-location col-12 text-left">
          <%= swipe.offer.location %>
        </div>
      </div>
      <div class="chat-button" >
        <%= link_to 'Chat', chat_room_path(swipe.chat_room), class: "btn btn-primary chat-button" %>
        </div>
    </div>
  <%end%>
  <div class="profile-link">
    <%= link_to offers_path, :class => "profile-link" do  %>
      <%= image_tag("rockt_button.png",  :class => "rocket-button", :alt => "footer")    %>
    <% end %>
  </div>
</div>
