  <div class = "match_background">
    <div class="background-lines"></div>

    <!--Logo-->
    <div class="row">
      <div class="col-xs mx-auto d-block mt-5">
        <%= image_tag("logo.png", :alt => "logo") %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs mx-auto d-block mt-5 animated pulse">
        <h4 class="match_font"> <b> match = <span class="match_result_font">true</span> </b> </h4>
      </div>
    </div>

    <div class="row mt-4 mb-2">
      <div class="col-6 d-flex justify-content-end pr-0">
        <div class="match-avatar card-custom-shadow animated fadeInLeft">
          <% if @current_user.photo? %>
            <%= cl_image_tag @current_user.photo, :class => "img-fluid rounded-circle", :alt => "avatar" %>
          <% else %>
            <%= image_tag image_url("default-avatar.png"), :class => "img-fluid rounded-circle", :alt => "avatar" %>
          <% end %>
        </div>
      </div>
      <div class="col-6 pl-0">
        <div class="match-company card-custom-shadow animated fadeInRight">
          <%= image_tag @offer.company_photo, :alt => "company_logo" %>
        </div>
      </div>
    </div>

    <!--button1-->
    <div class="row">
      <div class=" btn btn-lg col-12 mt-5 mb-4 text-center">
        <%= link_to offers_path, :class => "match-go-to-chat-button" do %>
          Go to chat <i class="fa fa-comment"></i>
        <% end %>
      </div>

      <div class="col-12 btn btn-lg text-center" >
        <%= link_to offers_path, :class => "match-back-to-swipe-button" do %>
          <span>Back to swipe</span> <i class="fa fa-undo-alt"></i>
        <% end %>
      </div>
    </div>

    <!--footer-->
    <div class="footer fixed-bottom">
      <div class="footer-top d-flex justify-content-center">
        <%= image_tag("footer.png", :class => "img-fluid", :alt => "footer") %>
      </div>
    </div>
  </div>

